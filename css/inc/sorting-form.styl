.sorting-form
  display flex
  min-height 220px
  padding 30px 70px
  background-image url("../img/filter-background.jpg")
  background-repeat no-repeat
  color white
  fieldset
    border none
  legend
    text(800, 16px, 21px)
  input
    display none
  &__facility-list
  &__type-list
    margin 0
    padding 0
    list-style none
  label
    margin-bottom 50px
    text(400, 14px, 21px)
  &__price-field
    background-color transparent
    border none
  &__checkbox + label
    margin-left 38px
    position relative
    cursor pointer
  &__checkbox[disabled]:hover + label
  &__checkbox[disabled]:focus + label
    cursor default
  &__checkbox + label::before
    position absolute
    left -39px
    top -3px
    icon("checkbox-off.svg", 27px, 23px)
    background-position left top
  &__checkbox:checked + label::before
    icon("checkbox-on.svg", 27px, 23px)
    background-position left top
    transform(rotate(360deg))
  &__range-filter
    width 316px
    margin-left auto
  &__price-controls
    display flex
    width 100%
    margin-bottom 30px
    border 2px solid white
    border-radius 3px
    label
      display flex
      margin-left 50px
      margin-bottom 0
      width 50%
    label:first-of-type
      border-right 2px solid white
    input
      width 60px
      margin-left 5px
      background-color transparent
      border none
  &__range-controls
    position relative
  &__scale
    width 100%
    height 2px
    overflow hidden
    background-color rgba(255, 255, 255, 0.3)
  &__bar
    width 100%
    height 2px
    position relative
    background-color white
  &__toggle
    width 20px
    height 24px
    position absolute
    bottom -12px
    background-image url("../img/filter-button.svg")
    background-repeat no-repeat
    background-position center
    cursor pointer
  &__toggle:active
    transform(scale(1.2))
  &__toggle--min
    left 0
  &__toggle--max
    right 0
  &__button
    text(400, 14px, 21px)
    background-color transparent
    text-transform uppercase
    border none
