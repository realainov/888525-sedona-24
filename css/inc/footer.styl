.site-footer
  display flex
  justify-content space-between
  align-items center

  width 1200px
  min-height 130px

  padding 38px 100px 38px 130px

  background-color rgba(255, 255, 255, 0.9)
  &--absolute
    position absolute
    bottom 0
  &__hashtag
    margin-top -12px

    text(800, 21px, 26px)
    &:hover
    &:focus
      color crayola
    &:active
      color light-grey
  &__social-list
    display flex
    flex-wrap wrap

    max-width 312px

    margin 0
    margin-left 34px
    padding 0

    list-style none
  &__social-item
    margin-right 6px
    margin-bottom 6px
  &__social-button
    display flex
    justify-content center
    align-items center

    width 46px
    height 48px

    background-color crayola
    &:hover
    &:focus
      background-color blue-grey
    &:active
      background-color blue-still
      & img
        opacity 0.3
  &__caption
    margin-top -5px
