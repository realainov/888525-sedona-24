.search-form
  display flex
  justify-content space-between
  align-items flex-start
  flex-wrap wrap
  padding 55px
  position absolute
  background-color white
  box-shadow 0 7px 15px 0 rgba(0, 1, 1, 0.15)
  text(800, 14px, 26px)
  label
    display flex
    justify-content space-between
    align-items center
    margin-bottom 29px
  for n in 1 2
    label:nth-of-type({n})
      width 100%
  label:nth-of-type(3)
    width 226px
  label:nth-of-type(4)
    width 180px
  input
    height 38px
    background-color smoky-white
    text(800, 14px, 26px)
    text-transform uppercase
    border none
    transition background-color 0.3s
    &:hover
      background-color smoky-grey
    &:focus
      background-color white
      outline 2px solid gainsborough
  &__date-field
    width 346px
    padding-left 12px
  &__number-field
    width calc(38px * 3)
    text-align center
    &::-webkit-outer-spin-button
    &::-webkit-inner-spin-button
      -webkit-appearance none
  &__button
    width 100%
    min-height 60px
    margin-top: 24px
    text(800, 21px, 26px)
    background-color crayola
    color white
    text-transform uppercase
    border none
    transition 0.3s
    &:hover
    &:focus
      background-color blue-grey
    &:active
      background-color blue-still
      color rgba(255, 255, 255, 0.3)
