.result
  &__hotel-list
    margin 0
    padding 0
    list-style none
  &__hotel-item
    display flex
    padding 25px 72px 30px 72px
    border-bottom 1px solid smoky-white
  &__hotel-row
    display flex
    flex-direction column
    width 100%
  &__hotel-col
    display flex
  &__hotel-col:nth-child(1)
    justify-content space-between
    margin-bottom -8px
  &__hotel-col:nth-child(2)
    margin-bottom -18px
  &__hotel-col:nth-child(3)
    margin-top auto
  img
    margin-top 5px
    margin-right 30px
  &__title
    color black
    &:hover
    &:focus
      color crayola
    &:active
      color light-grey
  &__rating-list
    display flex
    margin 0
    margin-top 3px
    padding 0
    list-style none
  &__rating-item
    margin-right 6px
  &__rating-item:last-child
    margin-right 0
  &__hotel-type
    width 115px
  &__detail-button
    display inline-block
    vertical-align baseline
    margin-right 6px
    padding 5.5px 17px 3.5px
    background-color crayola
    color white
    &:hover
    &:focus
      background-color blue-grey
    &:active
      background-color blue-still
      color rgba(255, 255, 255, 0.3)
  &__booking-button
    display inline-block
    vertical-align baseline
    padding 5.5px 17px 3.5px
    background-color flea
    color white
    &:hover
    &:focus
      background-color grey-brown
    &:active
      background-color brownish
      color rgba(255, 255, 255, 0.3)
  &__rating
    display inline-block
    vertical-align baseline
    margin 0
    margin-left auto
    padding 5.5px 17px 3.5px
    background-color smoky-white
    color dull-grey
